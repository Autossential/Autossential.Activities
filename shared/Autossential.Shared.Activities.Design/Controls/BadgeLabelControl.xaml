<UserControl x:Class="Autossential.Shared.Activities.Design.Controls.BadgeLabelControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="SelfControl">

    <StackPanel Orientation="Horizontal">
        <Label Content="{Binding Path=Label, ElementName=SelfControl}"/>
        <Border BorderBrush="#FF808080" 
                BorderThickness="1" 
                CornerRadius="8"
                Height="16"
                SnapsToDevicePixels="True">
            <Label Content="{Binding Path=Badge, ElementName=SelfControl}" 
                   FontSize="10" 
                   Padding="4,0"
                   Foreground="#EE808080"
                   FontWeight="Bold"/>
        </Border>
    </StackPanel>
    
</UserControl>